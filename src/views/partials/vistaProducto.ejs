<div class="container mt-5">
        <h1 class="text-primary text-center mt-5 fw-bold">Vista de Productos</h1>
        
            <% if(items.length > 0) {%>                 
                <div class="table-responsive mt-5">
                        <table class="table table-info">
                            <thead>
                                <tr>
                                    <th scope="col">Producto</th>
                                    <th scope="col">Precio</th>
                                    <th scope="col">Imagen</th>
                                </tr>
                            </thead>
                             <% items.forEach(item=> { %>
                            <tbody>
                                <tr>
                                <td><%= item.title %></td>
                                <td><%= item.price %></td>
                                <td class="w-25">
                                    <img src="<%= item.thumbnail %>" alt="<%= item.title %>">
                                
                                </tr>
                        
                            </tbody>
                            <% }) %>
                        </table>
   
                </div>  
            
                <% } else { %>
                <div class="alert alert-warning" role="alert">
                    <h2 class="text-warning text-center">No se encontraron datos</h2>
                </div>
            <% } %>
    </div>             